<% @release.each do |r| -%>
# mirror <%= @name %>-<%= r %>
<% if @mirror.include?('://') -%>
deb <%= @mirror -%>/<%= @os -%> <%= r -%> <%= @components.join(' ') %>
<% else -%>
deb http://<%= @mirror -%>/<%= @os -%> <%= r -%> <%= @components.join(' ') %>
<% end -%>

<% if @alt_arch -%>
<% @alt_arch.each do |aa| -%>
<% if @mirror.include?('://') -%>
deb-<%= aa -%> <%= @mirror -%>/<%= @os -%> <%= r -%> <%= @components.join(' ') %>
<% else -%>
deb-<%= aa -%> http://<%= @mirror -%>/<%= @os -%> <%= r -%> <%= @components.join(' ') %>
<% end -%>
<% end -%>
<% end -%>

<% if @source -%>
<% if @mirror.include?('://') -%>
deb-src <%= @mirror -%>/<%= @os -%> <%= r -%> <%= @components.join(' ') %>
<% else -%>
deb-src http://<%= @mirror -%>/<%= @os -%> <%= r -%> <%= @components.join(' ') %>
<% end -%>
<% end -%>
<% end -%>

